model Conversation {
  id         String               @id @default(uuid()) @db.Uuid
  created_at DateTime             @default(now()) @db.Timestamptz(3)
  updated_at DateTime            @updatedAt @db.Timestamptz(3)
  type       Type                 @default(direct)
  members    ConversationMember[]
  messages   Message[]

  @@map("conversations")
}

enum Type {
  direct
  group
}
